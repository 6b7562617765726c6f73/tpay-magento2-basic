<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <tpaycom_magento2basic>
                <active>0</active>
                <model>tpaycom\magento2basic\Model\Tpay</model>
                <payment_action>sale</payment_action>
                <title>tpay.com - szybkie płatności online</title>
                <allowspecific>0</allowspecific>
                <show_payment_channels>1</show_payment_channels>
                <blik_level_zero>0</blik_level_zero>
                <min_order_total>0.10</min_order_total>
                <is_gateway>1</is_gateway>
                <can_use_checkout>1</can_use_checkout>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_refund>0</can_refund>
                <can_void>0</can_void>
                <can_cancel>1</can_cancel>
                <currency>PLN</currency>
            </tpaycom_magento2basic>
        </payment>
    </default>
</config>
